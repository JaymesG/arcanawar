<div class="row">
    <div class="col-sm-12">
        <h1>Private</h1>


    <ul class="list-group">
        <li class="list-group-item active" id="usernameoutput">Username: {{ user.firstName }}</li>
        <li class="list-group-item" id="cardoutput">Favorite Card: {{ user.favoriteCard }}</li>
    </ul>
            <section class="palindrome-checker">
                <p>Change your name</p>
                <form id="name-form">
                    <label for="input-text-name">Your Screen Name:</label>
                    <textarea name="input-text-name" id="input-text-name" minlength="1" required>{{ user.firstName }} </textarea>
                    <label for="input-text-card">Your Favorite Card:</label>
                    <textarea name="input-text-card" id="input-text-card" minlength="1" required>{{user.favoriteCard}}</textarea>
                    <button type="submit">check</button>
                </form>
            </section>
            <section class="items-checked">
                <ul id="items-checked-list">
                </ul>
            </section>
        <form id="logout-form" action='/logout' method="post">
            <div class="form-group">
                <button type="submit">Log Out</button>
            </div>
        </form>

    </div>
</div>
