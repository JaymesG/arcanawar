<div class="row">
    <div class="col-sm-12">
        <h1>Private</h1>


    <ul class="list-group">
        <li class="list-group-item active">{{ user.firstName }} {{ user.lastName }}</li>
        <li class="list-group-item">{{ user.email }}</li>
    </ul>
            <section class="palindrome-checker">
                <p>Change your name</p>
                <form id="name-form">
                    <label for="input-text-name">Your Screen Name:</label>
                    <textarea name="input-text-name" id="input-text-name" value="{{user.screenName}}" minlength="1" required></textarea>
                    <label for="input-text-card">Your Favorite Card:</label>
                    <textarea name="input-text-card" id="input-text-card" value="{{user.favCard}}" minlength="1" required></textarea>
                    <button type="submit">check</button>
                </form>
            </section>
            <section class="items-checked">
                <h1>Items Checked:</h1>
                <ul id="items-checked-list">
                </ul>
            </section>
        <form id="static-form" action='/logout' method="post">
            <div class="form-group">
                <button type="submit">Log Out</button>
            </div>
        </form>

    </div>
</div>
<script type="text/javascript" src="public/js/profile.js"></script>
