<div class="row">
    <div class="col-sm-12">
        <h1>arcanawar</h1>

        <div class="row">

            <div class="col-sm-6">
                <form id="new-form" action='profile/' method="post">
                    <div class="form-group">
                        <button type="submit" class="btn btn-default">Profile</button>
                    </div>
                </form>
            </div>


            <div class="col-sm-6">
                <form id="logout-form" action='privategame/logout' method="post">
                    <div class="form-group">
                        <button type="submit" class="btn btn-default">Log Out</button>
                    </div>
                </form>

            </div>

        </div>




        <div class="row">
            <div class="col-sm-6 bg-success text-center">
                <h1 id="aiHP"></h1>
            </div>
            <div class="col-sm-6 bg-danger text-center">
                <h1 id="userHP"></h1>
            </div>
        </div>



        <div id="cardsContainer">

        </div>


        <br>
        <ul>
            {{#each cards}}
            <div class="row bg-primary">
                <div class="col-sm-6">
                    {{this.title}}
                </div>
                <div class="col-sm-6 bg-primary">
                    {{this.type}} : {{ this.value }}
                </div>
            </div>
            <div class="row">
                <div class="col-sm-12">
                    {{this.desc}}
                </div>
            </div>
            <hr> {{/each}}
        </ul>

        <h1 id="outputusercards"></h1>



        <form action="#n" name="theForm">

            <label for="gender">Gender: </label>
            <input type="radio" name="genderS" value="1" checked> Male
            <input type="radio" name="genderS" value="0"> Female
            <br>
            <br>
            <a href="javascript: submitForm()">Search</A>
        </form>



        <form id="static-form">
            {{!--
            <div class="form-group">
                <label for="input">Enter below</label>
                <textarea class="form-control" rows="2" id="input"></textarea>
            </div> --}}
            <div class="form-group hidden" id="error-container">
                <div class="alert alert-danger text-goes-here">
                </div>
            </div>

            <div class="radio">
                <label>
                    <input type="radio" name="optradio" value="1">Card One</label>
            </div>
            <div class="radio">
                <label>
                    <input type="radio" name="optradio" value="2">Card Two</label>
            </div>
            <div class="radio">
                <label>
                    <input type="radio" name="optradio" value="3">Card Tree</label>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-default">Play</button>
            </div>

            <h1>Results</h1>
            <ol id="savedInputs"></ol>
        </form>





    </div>
</div>
